<%= form_tag(url_for(@chapter), method: "PUT") do %>	
	<%= label_tag(:name) %>
	<%= text_area_tag(:name, @chapter.name, size: "50x1")%>
	<%= label_tag(:lead) %>
	<%= if @chapter.lead; Member.find(@chapter.lead).first_name << " " << Member.find(@chapter.lead).last_name; end; %>
	
	<%= label_tag(:email) %>
	<%= text_field_tag(:email, @chapter.email)%>
	<%= label_tag(:location) %>
	<%= text_area_tag(:location, @chapter.location)%>
	<%= label_tag(:home) %>
	<%= text_field_tag(:home, @chapter.home)%>
	<%= label_tag(:intake) %>
	<%= text_field_tag(:intake, @chapter.intake)%>
	<%= label_tag(:donation) %>
	<%= text_field_tag(:donation, @chapter.donation)%>
	<%= label_tag('Please provide links to photos and video of your test hand') %>
	<%= text_area_tag(:evidence, @chapter.evidence)%>
	
	<%= label_tag("Status") %>
	<% if current_member.admin? then %>
		<%= label_tag(:active, "Active") %>
		<%= radio_button_tag(:active, true, @chapter.active) %>
		<%= label_tag(:active, "Inactive") %>
		<%= radio_button_tag(:active, false, !@chapter.active) %>
	<% else %>
		<%= if @chapter.active; "Active"; else; "Inactive"; end %>
	<% end %>
	
	<div class="actions">
		<%= submit_tag "Update Chapter" %>
	</div>
<% end %>