<div class="card" style="font-weight: <%= if @request.stage == 'Open'; 'bold'; else; 'normal'; end; %> ">
	<a href="<%= url_for(@request) %>">
		<div class="cardCol"><%= @request.created_at.strftime('%x') %></div>
		<div class="cardCol"><%= Member.find(@request.member_id).first_name << " " << Member.find(@request.member_id).last_name %></div>
		<div class="cardCol"><%= Device.find(@request.device_id).title %></div>
		<div class="cardCol"><%= @request.side %></div>
		<div class="cardCol"><%= @request.stage %></div>
	</a>
</div>