<div class="sectionHeader" style="margin-bottom: 20px;">Forgot your password?</div>

<div class="logincontainer">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'loginfield' }) do |f| %>
	  <%= devise_error_messages! %>
	
	  <div class="loginfield">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true %>
	  </div>
	
	  <div class="actions">
	    <%= f.submit "Send me reset password instructions", class: 'clicky' %>
	  </div>
	<% end %>
	
	<%= render "devise/shared/links" %>
</div>
