<h2 class="sectionHeader">Edit Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= hidden_field_tag("member[id]", @member.id) %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, value: @member.email %>
  </div>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, value: @member.first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, value: @member.last_name %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, value: @member.city %>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country, value: @member.country %>
  </div>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<h2 class="sectionHeader" style="margin-top: 20px;">Change Password</h2>
  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", value: "" %>
  </div>

  <div class="field">
    <%= f.label 'Re-enter password' %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

<h2 class="sectionHeader">Confirm</h2>
  <div class="field" style="margin-bottom: 20px;">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

    <%= f.submit "Update", class: 'clicky'%>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'clicky' %></p>

<%= link_to "Back", :back %>
